@model List<UserInfo>
    @{
    ViewBag.title = "Başvuru Listesi";
    Layout = "_Layout";
    }

    <main class="text-center">
        <h1 class="h4">Toplantı Katılım Listesi</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>E-posta</td>
                    <td>Telefon</td>
                    <td>Katılım Durumu</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                var durum = user.WillAttend == true ? "Evet" : "Hayır";
                var className = user.WillAttend == true ? "table-success" : "table-danger";
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.WillAttend</td>
                    <td>
                        <a class="btn btn-primary" href="#">Detay Görüntüle</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </main>