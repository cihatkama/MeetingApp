@model UserInfo
@{
ViewBag.title = "Başvuru Formu";
Layout = "_Layout2";
}

<h1 class="text-center">Toplantı Katılım Formu</h1>
<form method="post" novalidate>
    <!-- novalidate ifadesi validation işleminin yazılımcı tarafından yapılacağını gösterir. -->
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">İsim Soyisim</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-Posta Adresi</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Telefon Numarası</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label">Katılım Durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Katılıyorum.</option>
            <option value="false">Katılamıyorum.</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>

</form>